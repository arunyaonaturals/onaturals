{
  "version": 2,
  "installCommand": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../api && npm install",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node@3.0.11",
      "config": {
        "includeFiles": [
          "api/backend/**/*"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/((?!api/).*\\..*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/frontend/index.html"
    }
  ]
}